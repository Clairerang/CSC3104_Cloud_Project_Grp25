# Copy this file to backend/.env and fill in real secrets (DO NOT COMMIT backend/.env)
# Example environment variables used by the backend services

# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM=
TWILIO_WEBHOOK_URL=

# MongoDB
MONGO_URL=mongodb://mongo:27017/notification

# Service-specific
SMS_PROVIDER=mock   # or 'twilio'
NODE_ENV=development

# Other secrets (do not commit real values)
# GMAIL_APP_PASSWORD=
# FIREBASE_PROJECT_ID=
# FIREBASE_CLIENT_EMAIL=
# FIREBASE_PRIVATE_KEY=
# Copy this file to .env and fill with real values (do NOT commit .env)
# Firebase Web SDK / FCM config (from your Firebase project settings)
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=
FIREBASE_VAPID_KEY=

# Optional local toggles
FCM_FALLBACK_V1=true
# Other envs used by the service (optional overrides)
# MONGO_URL=mongodb://mongo:27017/notification
# KAFKA_BROKER=kafka:9092
